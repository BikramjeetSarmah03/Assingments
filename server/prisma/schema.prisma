generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLE {
  USER
  ADMIN
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String  @unique
  number   String  @unique
  password String
  salt     String
  role     ROLE    @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@map("users")
}
