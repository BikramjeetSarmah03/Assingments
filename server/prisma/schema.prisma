generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LandType {
  AGRICULTURAL
  RESENDITIAL
  COMMERCIAL
  OTHER
}

enum ProposalStatus {
  APPROVED
  PENDING
  REJECTED
}

enum ROLE {
  ADMIN
  USER
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String  @unique
  number   String  @unique
  password String
  salt     String
  username String  @unique

  role ROLE @default(USER)

  proposals Proposal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@map("users")
}

model Proposal {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title       String
  description String?
  objective   String
  duration    String
  budget      String

  address       Address
  bankDetails   BankDetails
  incomeDetails IncomeDetails
  landDetails   LandDetails
  documents     Documents

  approved Boolean        @default(false)
  status   ProposalStatus @default(PENDING)

  deleteEnable Boolean @default(false)
  editEnable   Boolean @default(false)

  highlightedFields String[]

  remarks String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId

  @@map("proposals")
}

type Address {
  state         String
  district      String
  postOffice    String
  policeStation String
  pincode       String
  address       String
}

type BankDetails {
  bankName      String
  ifsc          String
  accountNumber String
  branch        String
}

type IncomeDetails {
  source String
  amount String
}

type LandDetails {
  ownerName   String
  ownerNumber String
  ownerEmail  String
  location    String
  area        String

  type LandType

  usage           String
  ownershipStatus String
  description     String?
}

type Documents {
  photo        Image
  addressProof Image
  incomeProof  Image
}

type Image {
  public_id  String
  secure_url String
}

type VerificationComments {
  comment          String
  modifiedBy       String
  modifiedRole     String
  status           String
  modificationDate DateTime
}
